<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/item_margin_small"
	android:orientation="vertical">

	<TextView
		android:id="@+id/name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:paddingTop="@dimen/item_margin_small"
		android:textColor="@color/primary_text"
		android:textSize="@dimen/title_text_size"
		android:textStyle="bold"
		tools:text="Ilham"/>

	<TextView
		android:id="@+id/level"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/name"
		android:textColor="@color/secondary_text"
		android:textSize="@dimen/title_text_size"
		android:textStyle="bold"
		tools:text="Class 6"/>

	<View
		android:id="@+id/space"
		android:layout_width="match_parent"
		android:layout_below="@id/level"
		android:layout_height="@dimen/item_margin_large" />

	<TextView
		android:id="@+id/present"
		android:layout_below="@id/space"
		android:textSize="@dimen/item_title_text_size"
		android:textColor="@color/primary_text"
		android:layout_marginBottom="@dimen/item_margin_small"
		tools:text="Present: 7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/presentAfterPayment"
		android:layout_below="@id/present"
		android:textSize="@dimen/item_title_text_size"
		android:textColor="@color/primary_text"
		android:layout_marginBottom="@dimen/item_margin_small"
		tools:text="Present After Last Payment: 7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/lastPayment"
		android:layout_below="@id/presentAfterPayment"
		android:textSize="@dimen/item_title_text_size"
		android:textColor="@color/primary_text"
		android:layout_marginBottom="@dimen/item_margin_small"
		tools:text="Last payment: 22-07-2016"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</RelativeLayout>