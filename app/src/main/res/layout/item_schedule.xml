<?xml version="1.0" encoding="utf-8"?>
<com.anakarwin.apples.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin_small"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="@dimen/item_margin_small"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="@dimen/item_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/item_margin_small">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            tools:text="31"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_margin_small" />

        <TextView
            android:id="@+id/day"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Saturday"
            android:textColor="@color/secondary_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</com.anakarwin.apples.SquareCardView>